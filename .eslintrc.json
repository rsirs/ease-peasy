{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "globals": {
        "process": true
    },
    "rules": {
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/no-this-alias": "off",
        // Suppress errors for missing return type on functions and methods
        "@typescript-eslint/explicit-function-return-type": "off",
        // Suppress errors for missing parameter type
        "@typescript-eslint/explicit-module-boundary-types": "off",
        // Suppress errors for unused variables and imports
        "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "no-unused-vars": 0,
        "no-unused-expressions": "off",
        // Suppress errors for naming interfaces and types with PascalCase
        "@typescript-eslint/naming-convention": [
            "error",
            {
                "selector": "interface",
                "format": ["PascalCase"],
                "custom": {
                    "regex": "^I[A-Z]",
                    "match": false
                }
            },
            {
                "selector": "typeLike",
                "format": ["PascalCase"]
            }
        ]
    }
}
