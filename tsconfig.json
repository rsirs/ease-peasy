{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
