{
    "name": "ease-peasy",
    "version": "1.0.0",
    "description": "Framework for web components",
    "main": "index.js",
    "scripts": {
        "docs:js": "jsdoc -c jsdoc.json",
        "docs:ts": "typedoc --options ./typedoc.base.json",
        "docs:md": "typedoc --options ./typedoc.md.json",
        "docs:publish": "git branch -D gh-pages; git checkout -b gh-pages; git checkout --orphan gh-pages; git rm -rf .; cp -r ./docs/* .; git add .; git commit -m 'docs(docs): update documentation';git push --force origin gh-pages; git checkout -",
        "start": "NODE_ENV=development esbuild --config=esbuild.config.js",
        "build": "NODE_ENV=production esbuild --config=esbuild.node.config.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsirs/ease-peasy.git"
    },
    "keywords": [
        "framework",
        "easy-peasy"
    ],
    "author": "Rajasekhar",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/rsirs/ease-peasy/issues"
    },
    "homepage": "https://github.com/rsirs/ease-peasy#readme",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "esbuild": "^0.17.9",
        "eslint": "^8.34.0",
        "jsdoc": "^3.6.11",
        "prettier": "^2.8.4",
        "typedoc": "^0.23.25",
        "typedoc-plugin-markdown": "^3.14.0"
    }
}
